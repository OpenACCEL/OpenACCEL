 
g=slider(0.002,0,0.01) 
    // play with the gravity strength to seek stable configurations;
    // how long can you keep things stable? 
    but=button()
time=if(!but,time{1}+1,0)
    //  reset the time to the moment of the creation of the universe 
planet1=[[nPoints:100,plotType:'bubble',x:[mode:'shift',ref:1],y:[mode:'shift',ref:2],col_a:[mode:'intp',low:1,high:0],diameter:[mode:'shift',ref:3]],[50+r[0].x],[50+r[0].y],[2*pow(m[0],1/3)]]
planet2=[[nPoints:100,plotType:'bubble',x:[mode:'shift',ref:1],y:[mode:'shift',ref:2],col_a:[mode:'intp',low:1,high:0],diameter:[mode:'shift',ref:3]],[50+r[1].x],[50+r[1].y],[2*pow(m[1],1/3)]]
planet3=[[nPoints:100,plotType:'bubble',x:[mode:'shift',ref:1],y:[mode:'shift',ref:2],col_a:[mode:'intp',low:1,high:0],diameter:[mode:'shift',ref:3]],[50+r[2].x],[50+r[2].y],[2*pow(m[2],1/3)]]
planet4=[[nPoints:100,plotType:'bubble',x:[mode:'shift',ref:1],y:[mode:'shift',ref:2],col_a:[mode:'intp',low:1,high:0],diameter:[mode:'shift',ref:3]],[50+r[3].x],[50+r[3].y],[2*pow(m[3],1/3)]]
planet5=[[nPoints:100,plotType:'bubble',x:[mode:'shift',ref:1],y:[mode:'shift',ref:2],col_a:[mode:'intp',low:1,high:0],diameter:[mode:'shift',ref:3]],[50+r[4].x],[50+r[4].y],[2*pow(m[4],1/3)]]
planet6=[[nPoints:100,plotType:'bubble',x:[mode:'shift',ref:1],y:[mode:'shift',ref:2],col_a:[mode:'intp',low:1,high:0],diameter:[mode:'shift',ref:3]],[50+r[5].x],[50+r[5].y],[2*pow(m[5],1/3)]]
planet7=[[nPoints:100,plotType:'bubble',x:[mode:'shift',ref:1],y:[mode:'shift',ref:2],col_a:[mode:'intp',low:1,high:0],diameter:[mode:'shift',ref:3]],[50+r[6].x],[50+r[6].y],[2*pow(m[6],1/3)]]
plotResult=plot([planet1,planet2,planet3,planet4,planet5,planet6,planet7])
    // seven graphs; every graph is one planet. Every graph takes three parameters that are shifted in.
    // Notice that we use the opacity (col_a) to make the trailes the planets leave a bit thin at the end.    
a=if(time>1,f/m,0)
    //  Newton: a=F/m 
f=#(i,vSequence(0,7),#(j,vSequence(0,7),if(i!=j,g*m[i]*m[j]*(r{1}[j]-r{1}[i])/(pow(vNormEuclid(r{1}[i]-r{1}[j]),3)),0),add),vAppend)
// the law of gravity force: propertional to both masses and inverse propoertional to the 
// square of the distance. But
// since the force is a vector, directed from mass j to mass i, we have the difference between these two
// in the numerator, and the distance cubed in the denominator.
m=[80,2,2,2,2,2,2] 
// one heavy sun and 6 light planets
r=if(time>1,r{1}+v,[['x':0,'y':0],['x':15,'y':0],['x':7,'y':10],['x':-7,'y':10],['x':-15,'y':0],['x':-7,'y':-10],['x':7,'y':-10]])
    //  r is obtained by integrating v; at the starting time (==1) give the initial positions 
v=if(time>1,v{1}+a,[['x':0,'y':0],['x':0,'y':0.1],['x':-0.05,'y':0.03],['x':-0.05,'y':-0.03],['x':0,'y':-0.1],['x':0.05,'y':-0.03],['x':0.05,'y':0.03]])
    //  v is obtained by integrating a; at the starting time give the initial velocities