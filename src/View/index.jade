doctype html
html
    head
        title OpenACCEL
        link(rel ='shortcut icon', type = 'image/x-icon', href = 'img/favicon.ico')

        script(data-main ='scripts/View/Main' src = 'scripts/require.js')
        script(src = 'scripts/jquery.js')
        script(src = 'scripts/jquery-ui.js')
        script(src = 'scripts/View/Graphics/Imports/Clone.js')
        script(src = 'scripts/View/Graphics/Imports/CanvasText.js')
        script(src = 'scripts/View/Graphics/Imports/Descartes.js')
        link(rel = 'stylesheet', type = 'text/css', href = 'css/accelstyle.css')
        link(rel = 'stylesheet', type = 'text/css', href = 'css/codemirror.css')
    body
        #loading(style = 'position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 1000000; background: #FFDDFF; background: linear-gradient(#FFDDFF, #FFFFFF); text-align: center')
            .inline(style = 'position: relative; top: 100px')
                div(style = 'background-image: url("../img/logoV2.png"); background-size: 100% auto; background-repeat: no-repeat; width: 800px; height: 200px;')
                h1(style = 'color: #662266;') Loading...

        #container
            #top
                #logo
            div
                #main.inline
                    ul
                        li
                            a(href = '#intro') Intro
                        li
                            a(href = '#editrun') Edit / Run script
                        li.disabled
                            a(href = '#helpdemo') Help / Demo
                        li
                            a(href = '#ioedit') IO / Edit
                        li.disabled
                            a(href = '#analysis') Analysis
                        li
                            a(href = '#optimisation') Genetic Optimisation
                        li
                            a(href = '#simulation') Simulation
                        li.disabled
                            a(href = '#network') Network

                    include Tabs/Intro.jade
                    include Tabs/EditRun.jade
                    include Tabs/HelpDemo.jade
                    include Tabs/IOEdit.jade
                    include Tabs/Analysis.jade
                    include Tabs/Optimisation.jade
                    include Tabs/Simulation.jade
                    include Tabs/Network.jade
