doctype html
html
    head
        title OpenACCEL
        script(data-main="scripts/view/main" src="scripts/require.js")
        script(src='scripts/jquery.js')
        script(src='scripts/jquery-ui.js')
        link(rel='stylesheet', type='text/css', href='css/accelstyle.css')
        script.
            $(document).ready(
                function() {
                    $('#main').tabs();
                    $('#scriptline').keypress(
                        function(e) {
                            if (e.which == 13) {
                                $('#enterline').click();
                            }
                        }
                    );
                }
            );
    body
        #container
            #top
                #logo
                #ccel CCEL
            #main
                ul
                    li
                        a(href='#intro') Intro
                    li
                        a(href='#editrun') Edit / Run script
                    li
                        a(href='#helpdemo') Help / Demo
                    li
                        a(href='#ioedit') IO / Edit
                    li
                        a(href='#analysis') Analysis
                    li
                        a(href='#optimisation') Genetic Optimisation
                    li
                        a(href='#simulation') Simulation
                    li
                        a(href='#network') Network

                include tabs/intro.jade
                include tabs/editrun.jade
                include tabs/helpdemo.jade
                include tabs/ioedit.jade
                include tabs/analysis.jade
                include tabs/optimisation.jade
                include tabs/simulation.jade
                include tabs/network.jade
